<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{personal.name}} - {{personal.title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="page">
      <header class="header">
        <h1 class="name-title">{{personal.name}},
          <span class="title">{{personal.title}}</span></h1>
        <div class="contact">
          <div>
            <a href="mailto:{{personal.email}}">{{personal.email}}</a>
            <span class="contact-divider">|</span>
            <a href="tel:{{tel personal.phone}}">{{personal.phone}}</a>
            <span class="contact-divider">|</span>
            {{personal.location}}
          </div>
          <div>
            <a
              href="https://{{personal.linkedin}}"
              target="_blank"
            >{{personal.linkedin}}</a>
            <span class="contact-divider">|</span>
            <a
              href="https://{{personal.github}}"
              target="_blank"
            >{{personal.github}}</a>
            <span class="contact-divider">|</span>
            <a
              href="https://{{personal.website}}"
              target="_blank"
            >{{personal.website}}</a>
          </div>
        </div>
      </header>

      <section class="section">
        <h2 class="section-title">Professional Summary</h2>
        <div class="summary">{{{summary}}}</div>
      </section>

      <section class="section">
        <h2 class="section-title">Professional Experience</h2>
        {{#each experience}}
          {{#if positions}}
            <!-- Company with multiple roles -->
            <div class="entry-item">
              <div class="entry-line">
                <span class="entry-title"><b>{{company}}</b></span>
                <span class="entry-meta">{{location}}</span>
              </div>

              <div class="roles-block">
                {{#each positions}}
                  <div class="entry-line role-line">
                    <span class="entry-title">{{title}}</span>
                    <span class="entry-meta">{{dates}}</span>
                  </div>
                  {{#if bullets}}
                    <ul class="bullets">
                      {{#each bullets}}<li>{{{this}}}</li>{{/each}}
                    </ul>
                  {{/if}}
                {{/each}}
              </div>
            </div>
          {{else}}
            <!-- Single-role company -->
            <div class="entry-item">
              <div class="entry-line">
                <span class="entry-title"><b>{{title}}</b>, {{company}}</span>
                <span class="entry-meta">{{dates}} | {{location}}</span>
              </div>
              {{#if bullets}}
                <ul class="bullets">
                  {{#each bullets}}<li>{{{this}}}</li>{{/each}}
                </ul>
              {{/if}}
            </div>
          {{/if}}
        {{/each}}
      </section>

      <section class="section">
        <h2 class="section-title">Technical Skills</h2>
        <div class="skills-grid">
          {{#each skills}}
            <div class="skill-category">
              <h4 class="skill-heading">{{@key}}</h4>
              <ul class="skill-list">
                {{#each this}}<li>{{this}}</li>{{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      </section>

      <section class="section">
        <h2 class="section-title">Education & Certifications</h2>
        {{#each education}}
          <div class="entry-item">
            <div class="entry-line">
              <span class="entry-title"><b>{{title}}</b></span>
              <span class="entry-meta">{{details}}</span>
            </div>
            {{#if description}}
              <div class="entry-desc">{{{description}}}</div>
            {{/if}}
          </div>
        {{/each}}
      </section>

      <section class="section">
        <h2 class="section-title">Awards & Recognition</h2>
        {{#each awards}}
          <div class="entry-item">
            <div class="entry-line">
              <span class="entry-title"><b>{{title}}</b></span>
              {{#if year}}<span class="entry-meta">{{year}}</span>{{/if}}
            </div>
            <div class="entry-desc">{{{details}}}</div>
          </div>
        {{/each}}
      </section>

      <section class="section">
        <h2 class="section-title">Projects & Volunteer Work</h2>
        {{#each projects}}
          <div class="entry-item">
            <div class="entry-line">
              <span class="entry-title"><b>{{title}}</b></span>
              {{#if urls}}
                <span class="entry-meta">
                  {{#each urls}}
                    <span class="entry-url">{{this}}</span>{{#unless @last}}
                      |
                    {{/unless}}
                  {{/each}}
                </span>
              {{/if}}
            </div>
            <div class="entry-desc">{{{description}}}</div>
          </div>
        {{/each}}
      </section>
    </div>
  </body>
</html>